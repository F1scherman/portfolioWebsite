<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - portfolioWebsite</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true"/>
</head>
<body class="bg-cat-base text-cat-text font-mono">
<header>
    <nav class="pl-2 pt-2">
        <div class="flex flex-row items-center">
            <a class="text-4xl text-cat-red" asp-area="" asp-page="/Index">Brayden Jonsson</a>
            <button type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
            </button>
            <div>
                <ul class="flex flex-row space-x-4 px-8 text-xl">
                    <li>
                        <a asp-area="" asp-page="/Education">Education</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div>
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer>
    <div class="px-2 py-2 text-sm">
        &copy; 2024 Brayden Jonsson - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>